<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/spinnerEstilo</item>
        <item name="colorControlNormal">@color/textPrimary</item>
    </style>
    <style name="spinnerEstilo" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

</resources>
